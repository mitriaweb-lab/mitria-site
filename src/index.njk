---
layout: base.njk
title: Home
permalink: /
showCta: true
---

<section class="hero">
  <img src="{{ home.heroImage }}" alt="Southeast Asia landscape" class="hero__image" fetchpriority="high" loading="eager">
  <div class="hero__overlay"></div>
  <div class="hero__content">
    <h1>{{ home.heroTitle }}</h1>
    <p>{{ home.heroSubtitle }}</p>
  </div>
</section>

<div class="star-divider"><img src="/images/star2.svg" alt=""></div>

<section class="section">
  <div class="container">
    <div class="split">
      <div class="split__text">
        <span class="section-label">Who We Are</span>
        <h2>{{ home.aboutHeading }}</h2>
        {{ home.aboutText1 | md | safe }}
        {{ home.aboutText2 | md | safe }}
        <a href="/about/" class="btn--text">Learn about our story</a>
      </div>
      <div class="split__image">
        <img src="{{ home.aboutImage }}" alt="Community gathering">
      </div>
    </div>
  </div>
</section>

<section class="section section--alt">
  <div class="container">
    <div class="section-heading">
      <span class="section-label">Experiences</span>
      <h2>Travel your way</h2>
    </div>
    <div class="card-grid card-grid--3">
      {%- for exp in collections.experiences | limit(3) %}
      <a href="/experiences/" class="card">
        <img src="{{ exp.data.image }}" alt="{{ exp.data.title }}" class="card__image">
        <div class="card__body">
          <span class="card__location">{{ exp.data.location }}</span>
          <h3>{{ exp.data.title }}</h3>
          <p>{{ exp.data.summary }}</p>
        </div>
      </a>
      {%- endfor %}
    </div>
    <div style="text-align: center; margin-top: var(--space-lg);">
      <a href="/experiences/" class="btn btn--outline">All Experiences</a>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="split split--reverse">
      <div class="split__text">
        <span class="section-label">Volunteering</span>
        <h2>{{ home.volHeading }}</h2>
        {{ home.volText | md | safe }}
        <a href="/experiences/" class="btn--text">Learn more</a>
      </div>
      <div class="split__image">
        <img src="{{ home.volImage }}" alt="Volunteering">
      </div>
    </div>
  </div>
</section>

<section class="section section--alt">
  <div class="container">
    <div class="split">
      <div class="split__text">
        <span class="section-label">Project Zomia</span>
        <h2>Where your money goes</h2>
        <p>Nearly all of our profits fund community-driven projects across the region.</p>
        <div class="project-list">
          {%- for proj in collections.projects | limit(4) %}
          <a href="/projects/" class="project-list__item">
            <img src="{{ proj.data.image }}" alt="{{ proj.data.title }}" class="project-list__img">
            <div>
              <h4>{{ proj.data.title }}</h4>
              <span class="project-list__location">{{ proj.data.location }}</span>
            </div>
          </a>
          {%- endfor %}
        </div>
        <a href="/projects/" class="btn--text" style="margin-top: var(--space-sm); display: inline-block;">See all projects →</a>
      </div>
      <div class="split__image">
        <img src="{{ collections.projects[0].data.image }}" alt="Project Zomia">
      </div>
    </div>
  </div>
</section>

<div class="star-divider"><img src="/images/star2.svg" alt=""></div>

<section class="section">
  <div class="container">
    <div class="section-heading text-center">
      <span class="section-label">Our Friends</span>
      <h2>Partners doing good work</h2>
    </div>
    <div class="partner-carousel">
      <button class="carousel-btn carousel-btn--prev" aria-label="Previous">‹</button>
      <div class="partner-carousel__track">
        {% for partner in partners.partners %}
        <div class="partner-carousel__card">
          {% if partner.url %}<a href="{{ partner.url }}" target="_blank" rel="noopener">{% endif %}
          <img src="{{ partner.image }}" alt="{{ partner.name }}">
          <h4>{{ partner.name }}</h4>
          <p>{{ partner.description }}</p>
          {% if partner.url %}</a>{% endif %}
        </div>
        {% endfor %}
      </div>
      <button class="carousel-btn carousel-btn--next" aria-label="Next">›</button>
    </div>
    <div class="partners-cta">
      <a href="/countries/" class="btn--text">Explore our country pages for more partners and good folks to visit</a>
    </div>
  </div>
</section>
