---
layout: base.njk
---

<section class="hero{% if short %} hero--short{% endif %}">
  <img src="{{ image }}" alt="{{ title }}" class="hero__image" fetchpriority="high" loading="eager">
  <div class="hero__overlay"></div>
  <div class="hero__content"><h1>{{ title }}</h1></div>
</section>

<section class="section">
  <div class="container">
    <div class="page-intro">
      {{ content | safe }}
    </div>
  </div>
</section>

{% if quickFacts %}
<section class="quick-facts">
  <div class="container">
    <div class="quick-facts__grid">
      <div class="quick-facts__item">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M3 21h18M5 21V7l8-4v18M13 21V3l6 4v14"/><path d="M9 9h.01M9 13h.01M9 17h.01"/></svg>
        <div><span class="quick-facts__label">Capital</span><span class="quick-facts__value">{{ quickFacts.capital }}</span></div>
      </div>
      <div class="quick-facts__item">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
        <div><span class="quick-facts__label">Language</span><span class="quick-facts__value">{{ quickFacts.language }}</span></div>
      </div>
      <div class="quick-facts__item">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="8"/><path d="M12 6v6l4 2"/></svg>
        <div><span class="quick-facts__label">Time Zone</span><span class="quick-facts__value">{{ quickFacts.timezone }}</span></div>
      </div>
      <div class="quick-facts__item">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
        <div><span class="quick-facts__label">Currency</span><span class="quick-facts__value">{{ quickFacts.currency }}</span></div>
      </div>
    </div>
  </div>
</section>
{% endif %}

{% if not (projects and projects.length) and not (experiences and experiences.length) and not (friends and friends.length) and not (volunteering and volunteering.length) %}
<section class="section section--alt">
  <div class="container">
    <div class="page-intro" style="text-align: center;">
      <p style="font-size: 1.05rem; color: var(--color-text-light);">We're building partnerships and experiences in {{ title }}. In the meantime, <a href="/contact/" class="btn--text">get in touch</a> and we'll help you plan a custom itinerary or connect you with organizations doing good work here.</p>
    </div>
  </div>
</section>
{% endif %}

{% if projects and projects.length %}
<section class="section section--alt">
  <div class="container">
    <div class="section-heading"><span class="section-label">Our Projects in {{ title }}</span></div>
    {% for project in projects %}
    <div class="split{% if loop.index % 2 == 0 %} split--reverse{% endif %}"{% if not loop.last %} style="margin-bottom: var(--space-2xl);"{% endif %}>
      <div class="split__image"><img src="{{ project.image }}" alt="{{ project.name }}"></div>
      <div class="split__text">
        <h3>{{ project.name }}</h3>
        {% if project.location %}<span class="text-muted" style="font-size:0.88rem;display:block;margin-bottom:0.75rem;">{{ project.location }}</span>{% endif %}
        {{ project.description | md | safe }}
      </div>
    </div>
    {% endfor %}
  </div>
</section>
{% endif %}

{% if experiences and experiences.length %}
<section class="section">
  <div class="container">
    <div class="section-heading"><span class="section-label">Experiences in {{ title }}</span></div>
    <div class="card-grid card-grid--2">
      {% for exp in experiences %}
      <a href="{{ exp.link if exp.link else '/contact/' }}" class="card card--experience">
        <img src="{{ exp.image }}" alt="{{ exp.name }}" class="card__image">
        <div class="card__body">
          {% if exp.region %}<span class="card__location">{{ exp.region }}</span>{% endif %}
          <h3>{{ exp.name }}</h3>
          {{ exp.summary | md | safe }}
          <span class="card__action">{{ "View trip details →" if exp.link else "Inquire about this trip →" }}</span>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

{% if volunteering and volunteering.length %}
<section class="section section--alt">
  <div class="container">
    <div class="section-heading"><span class="section-label">Volunteering Opportunities</span></div>
    <div class="card-grid card-grid--2" style="max-width:700px;">
      {% for vol in volunteering %}
      <div class="partner-card">
        {% if vol.image %}<img src="{{ vol.image }}" alt="{{ vol.name }}" class="partner-card__image">{% endif %}
        <h4>{{ vol.name }}</h4>
        {{ vol.description | md | safe }}
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

{% if friends and friends.length %}
<section class="section">
  <div class="container">
    <div class="section-heading"><span class="section-label">Our Friends in {{ title }}</span></div>
    <div class="card-grid card-grid--3">
      {% for friend in friends %}
      <div class="partner-card">
        {% if friend.image %}<img src="{{ friend.image }}" alt="{{ friend.name }}" class="partner-card__image">{% endif %}
        <h4>{{ friend.name }}</h4>
        {{ friend.description | md | safe }}
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

{% if seasons and seasons.length %}
<section class="section section--alt">
  <div class="container">
    <div class="section-heading" style="text-align: center;"><span class="section-label">Travel Guide</span><h2>When to visit {{ title }}</h2></div>
    {% if travelTips %}
    <div class="travel-tips">
      <svg class="travel-tips__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4M12 8h.01"/></svg>
      <div class="travel-tips__text">{{ travelTips | md | safe }}</div>
    </div>
    {% endif %}
    <div class="season-grid">
      {% for season in seasons %}
      <div class="season-card" tabindex="0">
        <div class="season-card__icon">
          {% if "dry" in season.name | lower or "hot" in season.name | lower or "summer" in season.name | lower %}
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
          {% elif "monsoon" in season.name | lower or "wet" in season.name | lower or "rain" in season.name | lower or "green" in season.name | lower %}
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20 17.58A5 5 0 0 0 18 8h-1.26A8 8 0 1 0 4 16.25"/><path d="M8 16l-1 4M12 16l-1 4M16 16l-1 4"/></svg>
          {% elif "cool" in season.name | lower or "winter" in season.name | lower or "cold" in season.name | lower %}
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2v20M2 12h20M4.93 4.93l14.14 14.14M19.07 4.93L4.93 19.07"/></svg>
          {% elif "festival" in season.name | lower or "cultural" in season.name | lower %}
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M6 9l6 6 6-6"/><path d="M12 3v12"/><rect x="4" y="18" width="16" height="3" rx="1"/></svg>
          {% elif "trek" in season.name | lower or "hik" in season.name | lower %}
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="m8 3 4 8 5-5 2 15H2L8 3z"/></svg>
          {% elif "north" in season.name | lower or "south" in season.name | lower or "central" in season.name | lower %}
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
          {% else %}
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="3" y="4" width="18" height="18" rx="2"/><path d="M16 2v4M8 2v4M3 10h18"/></svg>
          {% endif %}
        </div>
        <h4>{{ season.name }}</h4>
        {{ season.description | md | safe }}
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}
